{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@backend/*": [
                "backend/src/*"
            ],
            "@frontend/*": [
                "frontend/src/*"
            ],
            "@config/*": [
                "backend/src/config/*"
            ],
            "@utils/*": [
                "backend/src/utils/*"
            ],
            "@middleware/*": [
                "backend/src/middleware/*"
            ],
            "@scripts/*": [
                "backend/src/scripts/*"
            ],
            "@domains/*": [
                "backend/src/domains/*"
            ],
            "@database/*": [
                "backend/src/database/*"
            ]
        }
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}