{
  "name": "fil-rouge",
  "version": "1.0.0",
  "description": "Gestion des d√©chets - HTML/CSS/JS avec Express.js",
  "main": "app.js",
  "type": "module",
  "imports": {
    "#domains/*": "./backend/src/domains/*",
    "#middleware/*": "./backend/src/middleware/*",
    "#backend/*": "./backend/src/*",
    "#utils/*": "./backend/src/utils/*",
    "#config/*": "./backend/src/config/*",
    "#scripts/*": "./backend/src/scripts/*",
    "#database/*": "./backend/src/database/*",
    "#core-frontend/*": "./frontend/src/core/*",
    "#constants/*": "./frontend/src/constants/*",
    "#components/*": "./frontend/src/components/*",
    "#views/*": "./frontend/src/views/*",
    "#utils-frontend/*": "./frontend/src/utils/*",
    "#styles/*": "./frontend/src/styles/*",
    "#pages/*": "./frontend/src/pages/*",
    "#loader/*": "./backend/src/loader/*"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "node_modules/.bin/cz",
    "start": "node backend/src/registerLoaders.js",
    "dev:back": "nodemon backend/src/app.js",
    "build:frontend": "rm -rf frontend/dist && vite build --config frontend/vite.config.js",
    "dev:all": "node_modules/.bin/concurrently -k -n FRONTEND,BACKEND -c green,blue \"vite build --config frontend/vite.config.js --watch\" \"nodemon backend/src/registerLoaders.js\"",
    "check:env": "node backend/src/utils/validateEnv.js",
    "init:mongo": "node_modules/.bin/vite-node backend/src/scripts/initMongo.js",
    "seed:mongo": "node_modules/.bin/vite-node backend/src/scripts/seedMongoDB.js",
    "init:mysql": "node_modules/.bin/vite-node backend/src/scripts/initMySQL.js",
    "seed:mysql": "node_modules/.bin/vite-node backend/src/scripts/seedMySQL.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "mongodb": "^6.19.0",
    "morgan": "^1.10.1",
    "mysql2": "^3.14.5",
    "vite-node": "^3.2.4"
  },
  "devDependencies": {
    "commitizen": "^4.3.1",
    "concurrently": "^9.2.1",
    "cz-conventional-changelog": "^3.3.0",
    "install": "^0.13.0",
    "vite": "^7.1.5"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
