{
  "name": "fil-rouge",
  "version": "1.0.0",
  "description": "Gestion des d√©chets - HTML/CSS/JS avec Express.js",
  "main": "app.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "commit": "cz",
    "start": "node backend/src/app.js",
    "dev": "vite build && concurrently \"vite build --watch\" \"nodemon dist/app.js\"",
    "build:backend": "rm -rf backend/dist && vite build --config backend/vite.config.js",
    "build:frontend": "rm -rf frontend/dist && vite build --config frontend/vite.config.js",
    "check:env": "node backend/src/utils/validateEnv.js",
    "init:mongo": "vite-node backend/src/scripts/initMongo.js",
    "seed:mongo": "vite-node backend/src/scripts/seedMongoDB.js",
    "init:mysql": "vite-node backend/src/scripts/initMySQL.js",
    "seed:mysql": "vite-node backend/src/scripts/seedMySQL.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.0",
    "module-alias": "^2.2.3",
    "mongodb": "^6.18.0",
    "morgan": "^1.10.0",
    "mysql2": "^3.14.3",
    "vite-node": "^3.2.4"
  },
  "devDependencies": {
    "commitizen": "^4.3.1",
    "concurrently": "^9.2.0",
    "cz-conventional-changelog": "^3.3.0",
    "install": "^0.13.0",
    "vite": "^7.1.1"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "_moduleAliases": {
    "@utils": "backend/src/utils",
    "@config": "backend/src/config",
    "@scripts": "backend/src/scripts",
    "@domains": "backend/src/domains",
    "@middleware": "backend/src/middleware",
    "@database": "backend/src/database",
    "@frontend": "frontend/src",
    "@core": "frontend/src/core",
    "@constants": "frontend/src/constants",
    "@components": "frontend/src/components",
    "@views": "frontend/src/views",
    "@utils-frontend": "frontend/src/utils"
  }
}
